#include <stdio.h>

// A small program that checks if an input grade has passed or failed

int main() {
    int grades;
    do {
        printf("\nplease enter your grade:");
        scanf("%d",&grades);
    } while (grades < 0 || grades > 100);  // to ensure valid input only
    if (grades < 40) {
        printf("Fail");
    } else {
        printf("pass");
    } //this if statement checks if the inputted grade is a pass or fail
return 0;
}

