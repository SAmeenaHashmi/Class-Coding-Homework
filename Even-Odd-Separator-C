#include <stdio.h>

//program that seperates all the even and odd numbers from zero to user inputted integer. 

int main() {
    // Write C code here
    int input;
    int output;
    int even;
    int odd;
    printf("Please enter a number:");
    scanf("%d", &input);
    for (output = 0; output < input; output = output + 2){
        printf("%d\t\t\t%d\n", output, output + 1);
    }
    printf("%d", input);
    return 0;
    
}
